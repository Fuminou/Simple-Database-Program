<!-- instructors.hbs -->

{{!-- Create a table --}}

<head>
<title>Instructors</title>
<link href="style.css" rel="stylesheet" type="text/css" />
</head>

<!-- Add links in one line -->
<div>
    <a href="/">Students</a> | <a href="/instructors">Instructors</a> | <a href="/departments">Departments</a> | <a href="/studentClass">Student Class</a> 
</div>

<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell (these are the attribute names) --}}
        <tr>
            {{#each instructors.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{#each instructors}}
        <tr>
            <td>{{this.instructor_id}}</td>
            <td>{{this.f_name}}</td>
            <td>{{this.l_name}}</td>
            <td>{{this.department_id}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add new instructor here</h2>
<p>To add an instructor, enter their information below and click "Submit".</p>
<form id="add-instructor-form" method="POST" action="/add_new_instructor" onsubmit="">
    <fieldset>
        <legend class="required-field">Name:</legend>
        <label for="input-instructor_f_name">First </label>
        <input type="text" name="input-instructor_f_name" id="input-instructor_f_name">
        <label for="input-instructor_l_name">Last </label>
        <input type="text" name="input-instructor_l_name" id="input-instructor_l_name">
        <label for="input-instructor_department_id">Department_id </label>
        <input type="text" name="input-instructor_department_id" id="input-instructor_department_id">
    </fieldset>
    <br/>
    <input type="submit">
</form>

<!-- Form to update an instructor -->
<h2>Update an instructor</h2>
<form id="update-instructor-form" method="POST" action="/update_instructor" onsubmit="">
    <fieldset>
        <legend class="required-field">Select Instructor:</legend>
        <select name="instructor_id">
            {{#each instructors}}
            <option value="{{this.instructor_id}}">{{this.f_name}} {{this.l_name}}</option>
            {{/each}}
        </select>
        <legend class="required-field">Name:</legend>
        <label for="input-update_instructor_f_name">First</label>
        <input type="text" name="input-update_instructor_f_name" id="input-update_instructor_f_name">
        <label for="input-update_instructor_l_name">Last</label>
        <input type="text" name="input-update_instructor_l_name" id="input-update_instructor_l_name">
        <label for="input-update_instructor_department_id">Department_id</label>
        <input type="text" name="input-update_instructor_department_id" id="input-update_instructor_department_id">
    </fieldset>
    <br/>
    <input type="submit">
</form>

<!-- Form to delete an instructor -->
<h2>Delete an Instructor</h2>
<form id="delete-instructor-form" method="POST" action="/delete_instructor" onsubmit="return confirm('Are you sure you want to delete this instructor?')">
    <fieldset>
        <legend class="required-field">Select Instructor:</legend>
        <select name="instructor_id">
            {{#each instructors}}
            <option value="{{this.instructor_id}}">{{this.f_name}} {{this.l_name}}</option>
            {{/each}}
        </select>
    </fieldset>
    <br/>
    <input type="submit" value="Delete Instructor">
</form>

